{% extends 'layout/base.html.twig' %}
{% block body %}
<div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-between gx-0 min-vh-100">
        <div class="col-12 col-md-6 py-8 py-md-11">
            <h2 class="fw-bold text-center mb-2">
                N’hésitez pas à me contacter, je suis à votre disposition pour plus d’informations
            </h2>

            <hr class="hr-sm my-6 my-md-8 mx-auto bg-gray-300">

            {{ form_start(form) }}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="form-group mb-5">
                    <label class="form-label" for="formulaireContactNom">
                        {{ form_label(form.nom) }}
                    </label>
                    {{ form_widget(form.nom)}}
                </div>
                <div class="form-group mb-5">
                    <label class="form-label" for="formulaireContactPrenom">
                        {{ form_label(form.prenom) }}
                    </label>
                    {{ form_widget(form.prenom)}}
                </div>
                <div class="form-group mb-5">
                    <label class="form-label" for="formulaireContactMail">
                        {{ form_label(form.mail) }}
                    </label>
                    {{ form_widget(form.mail)}}
                </div>
                <div class="form-group mb-5">
                    <label class="form-label" for="formulaireContactMessage">
                        {{ form_label(form.message) }}
                    </label>
                    {{ form_widget(form.message)}}
                </div>
                <div class="form-group mb-0">
                    {{ form_widget(form.envoyer)}}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
